{
  "name": "ravenode-service",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "yarn run client:watch & yarn run server:watch",
    "server:watch": "nodemon --watch 'src/server/**/*.ts' --exec 'ts-node' --project src/server/tsconfig.json src/server/index.ts",
    "server:build": "./node_modules/.bin/tsc",
    "client:watch": "parcel watch ./src/client/pages/**/*.html ./src/client/pages/*.html",
    "client:build": "parcel build ./src/client/pages/**/*.html ./src/client/pages/*.html",
    "build": "yarn run server:build && yarn run client:build",
    "start": "yarn run build && node server_built/index.js"
  },
  "devDependencies": {
    "nodemon": "^1.19.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.1",
    "@material-ui/icons": "^4.0.1",
    "@nano-sql/adapter-rocksdb": "^2.0.7",
    "@nano-sql/core": "^2.3.3",
    "@types/bcrypt": "^3.0.0",
    "@types/classnames": "^2.2.8",
    "@types/hapi": "^18.0.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.40",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.132",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^12.0.2",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.1.0",
    "@types/react-router-dom": "^4.3.4",
    "@types/recompose": "^0.30.6",
    "@types/uuid": "^3.4.4",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^3.0.6",
    "buffer": "^5.2.1",
    "ipfs": "^0.36.2",
    "ipfsd-ctl": "^0.42.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.6.0",
    "orbit-db": "^0.21.0",
    "prop-types": "^15.7.2",
    "ra-data-json-server": "^2.9.2",
    "ra-language-chinese": "^2.0.5",
    "ra-language-english": "^2.8.5",
    "ra-language-french": "^2.8.5",
    "react": "^16.8.6",
    "react-admin": "^2.9.2",
    "react-dom": "^16.8.6",
    "ts-node": "^8.2.0"
  }
}
